<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E5E5E5"
        tools:context=".AddDealActivity">

    <ScrollView
        android:id="@+id/scroll_view_add_deal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_add_deal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">


            <LinearLayout
                android:id="@+id/ll_deal_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawale_square_corners"
                android:orientation="vertical"
                android:paddingLeft="6dp"
                android:paddingTop="8dp"
                android:paddingRight="6dp"
                android:paddingBottom="8dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txt_deal_link_add_deal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deal Link" />

                <EditText
                    android:id="@+id/ed_deal_link_add_deal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:hint="Please Enter Link of Product"
                    android:inputType="textUri|text"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/txt_deal_title_add_deal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Deal Title" />

                <EditText
                    android:id="@+id/ed_deal_title_add_deal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:hint="Please Enter Link of Product"
                    android:inputType="textUri|text"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/txt_deal_desc_add_deal2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Deal Description" />

                <EditText
                    android:id="@+id/ed_deal_desc_add_deal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:minHeight="100dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_deal_price_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/drawale_square_corners"
                android:orientation="vertical"
                android:paddingLeft="6dp"
                android:paddingTop="8dp"
                android:paddingRight="6dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/txt_deal_price_add_deal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deal Price" />

                <EditText
                    android:id="@+id/ed_deal_price_add_deal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:hint="Please Enter Deal Price"
                    android:inputType="numberDecimal"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/txt_deal_retailprice_add_deal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deal Link" />

                <EditText
                    android:id="@+id/ed_deal_retailprice_add_deal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:hint="Please Enter Retail Price"
                    android:inputType="numberDecimal"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/txt_deal_discount_add_deal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dicount" />

                <EditText
                    android:id="@+id/ed_deal_discount_add_deal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:hint="Please Enter Discount Percentage"
                    android:inputType="numberDecimal"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/txt_deal_expirydate_add_deal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expiry Date" />

                <EditText
                    android:id="@+id/ed_deal_expirydate_add_deal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:hint="Please Enter Expiry Date"
                    android:inputType="textUri|text"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/txt_deal_img_add_deal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Image" />

                <ImageView
                    android:id="@+id/img_deal_add_deal_img"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/deal_default_img" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="2dp"
        android:text="Cancel"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#404040"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSubmitDeal"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view_add_deal" />

    <Button
        android:id="@+id/btnSubmitDeal"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:text="Submit"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCancel"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view_add_deal"
        app:layout_constraintVertical_bias="0.0" />

    <com.ldoublem.loadingviewlib.view.LVRingProgress
        android:id="@+id/lv_circularring_add_deal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:alpha="543"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />
</android.support.constraint.ConstraintLayout>
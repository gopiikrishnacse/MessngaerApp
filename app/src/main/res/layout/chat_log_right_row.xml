<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="51dp"
            android:layout_height="51dp" app:srcCompat="@android:drawable/star_big_on"
            android:id="@+id/img_right_chatlog"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorPrimaryDark"
            android:layout_marginEnd="4dp" android:layout_marginRight="4dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:text="Heloo!!"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_log_right"
            android:textAlignment="textEnd"
            android:padding="8dp"
            android:gravity="end"
            android:background="@drawable/drawale_rounded_corners"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/img_right_chatlog" android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>